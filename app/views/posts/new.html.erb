<h3>Submit to Project Skeleton</h3><br>

<form class="new-text-form" action="<%= posts_url %>" method="POST">
	<label><b>text form</b></label>

	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<label>
		<p>title</p><br>
		<textarea name="post[title]"></textarea>
	</label>

	<label>
		<p>text</p><br>
		<textarea name="post[text]"></textarea>
	</label>

	<br><br>

	<label>
		Choose a sub
		<input class="drop-down" type="text" name="post[subreddit]">
	<label>

	<br><br>

	<input type="submit" value="submit">

</form>
