<%= navTemplateFn({ post: post }) %>

<div class="post-show">
	<%= textTemplateFn({ post: post }) %>

	<% if (ProjectSkeleton.currentUserId) { %>

		<div class="new-comment">
			<h5>comment on post</h5>
			<form class="post-comment">
				<input type="hidden" name="comment[post_id]" value="<%= post.id %>">
				<textarea name="comment[content]"></textarea>
				<br>
				<button type="button" class="shawnas">Upload a Photo </button>
				<!-- <label id="filepicker_url">
					Upload A Picture:
				<input type="filepicker_field" name="comment[filepicker_url]" id="filepicker_url">
				<br> -->

				<input type="submit" value="submit" class="submit-comment">
			</form>
		</div>

	<% } %>


	<div id="link-post-comments">
	  <% post.comments().forEach(function(comment) { %>
		<%= commentTemplate({ comment: comment, templateFn: commentTemplate }) %>

	  <% }); %>
	</div>
</div>
