 <div class="subreddit-elements clearfix">
	<h3 class="fancy-front-page"><%= user.escape("username") %></h3>


	<div class="subreddit-nav-bar">
		<ul>
			<li><a class="posts" href="#/users/<%= user.id %>/posts">posts</a></li>
			<li><a class="comments" href="#/users/<%= user.id %>/comments">comments</a></li>
		</ul>
	</div>


	<div class="subreddit-sidebar">
		<div class="subreddit-details user-details">
			<p><%= user.escape("username") %></p><br>
			<p>account created <%= $.timeago(user.escape("created_at")) %> </p><br>
			<p>post karma: <%= user.escape("post_karma") %></p><br>
			<p>comment karma: <%= user.escape("comment_karma") %></p><br>
			<% var subReddits = user.get("moderated_subreddits"); %>
			<% if (subReddits) { %>
				<% subReddits.forEach(function(subReddit){ %>
					<p>moderator:<a href="#/subreddits/<%= subReddit.id %>"><%= subReddit.name %></a></p>
					<br>
				<% }) %>
			<% } %>

      <div class="avatar-section">
				<img src="<%= user.escape("filepicker_url") %>">
			</div>

		</div>
	</div>
</div>
