<% if ( unRead.length > 0 ) { %>
	<a class="notifications-link">
	  notifications
	</a>

	<span class="notifications-num">
	  <%= unRead.length %>
	</span>

<% } else { %>
	<a class="notifications-link">
	  notifications
	</a>

	<span class="notifications-num">
	  <%= 0 %>
	</span>
<% } %>

<ul class="notifications-dropdown">
	<% notifications.forEach(function(notification){ %>
		<li>
		  <a class="link-to-content" data-id="<%= notification.id %>" href="<%= notification.escape("url") %>">
			  <%= notification.escape("text") %>
			</a>
		</li>
	<% }) %>
</ul>
